{
  "basePath": "",
  "files": [
    "node_modules/jquery/dist/jquery.min.js",
    "node_modules/bootstrap/dist/js/bootstrap.min.js",
    "node_modules/angular/angular.min.js",
    "node_modules/angular-mocks/angular-mocks.js",

    "dist/js/styleguide-components.js",
    "dist/js/json-schema.js",

    "test-utils.js",
    "src/**/*spec.js"
  ],
  "exclude": [],
  "autoWatch": false,
  "frameworks": ["jasmine"],
  "browsers": [
    "Chrome"
  ],
  "singleRun": true,
  "client": {
    "clearContext": false
  },
  "reporters": ["mocha", "progress", "coverage", "remap-coverage"],
  "preprocessors": {
    "src/**/*.spec.js": ["coverage", "webpack", "sourcemap"],
    "src/**/spec.js": ["coverage", "webpack", "sourcemap"]
  },
  "plugins": [
    "karma-jasmine",
    "karma-coverage",
    "karma-chrome-launcher",
    "karma-webpack",
    "karma-sourcemap-loader",
    "karma-mocha-reporter",
    "karma-remap-coverage"
  ],
  "coverageReporter": {
    "reporters": [{
      "type": "text",
      "dir": "build/coverage/",
      "file": "coverage.txt"
    },{
      "type": "cobertura",
      "dir": "build/coverage/",
      "file": "coverage.xml"
    }]
  },
  "remapCoverageReporter": {
    "text": null,
    "json": "./coverage/coverage.json",
    "html": "./coverage/coverage.html",
    "lcov": "./coverage/coverage.lcov"
  },
  "webpackMiddleware": {
    "logLevel": "warn",
    "stats": {
      "chunks": false
    }
  },
  "mochaReporter": {
    "output": "minimal"
  }
}
